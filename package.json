{
  "name": "dev-bot",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "tsc": "ts-node-dev -r tsconfig-paths/register",
    "prebuild": "yarn clean",
    "build": "tsc -b tsconfig.build.json",
    "jest": "ts-node-dev ./node_modules/jest/bin/jest.js",
    "test": "yarn jest --coverage",
    "start:dev": "NODE_ENV=development DEBUG=log nodemon",
    "start:prod": "yarn build && DEBUG=log node dist/index.js",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix":"yarn lint --fix"
  },
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "@slack/webhook": "^5.0.2",
    "@types/circular-json": "^0.4.0",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.1",
    "@types/hapi__joi": "^15.0.4",
    "@types/lru-cache": "^5.1.0",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.7.11",
    "@types/redis": "^2.8.14",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "circular-json": "^0.5.9",
    "debug": "^4.1.1",
    "dotenv-extended": "^2.4.0",
    "express": "^4.17.1",
    "http": "^0.0.0",
    "lru-cache": "^5.1.1",
    "morgan": "^1.9.1",
    "redis": "^2.8.0",
    "tsscmp": "^1.0.6"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "jest": "^24.9.0",
    "nodemon": "^1.19.3",
    "ts-jest": "^24.1.0",
    "ts-node-dev": "^1.0.0-pre.43",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.6.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "!<rootDir>/src/index.ts",
      "!**/node_modules/**"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "testEnvironment": "node"
  }
}
